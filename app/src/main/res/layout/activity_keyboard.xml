            android:textAllCaps="false" />

        <Button
            android:id="@+id/F"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_weight="0"
            android:text="F"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/G"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_weight="0"
            android:text="G"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/H"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_weight="0"
            android:text="H"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/J"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_weight="0"
            android:text="J"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/K"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_weight="0"
            android:text="K"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/L"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_weight="0"
            android:text="L"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/SEMICOLON"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:text=":\n;"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/QUOTE"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:text="@string/Quotes"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/ENTER"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_weight="0"
