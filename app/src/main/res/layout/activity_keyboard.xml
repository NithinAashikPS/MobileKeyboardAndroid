<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".KeyboardActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/ESC"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:textAllCaps="false"
            android:text="Esc" />

        <Button
            android:id="@+id/F1"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:textAllCaps="false"
            android:text="F1" />

        <Button
            android:id="@+id/F2"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:textAllCaps="false"
            android:text="F2" />

        <Button
            android:id="@+id/F3"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:textAllCaps="false"
            android:text="F3" />

        <Button
            android:id="@+id/F4"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:textAllCaps="false"
            android:text="F4" />

        <Button
            android:id="@+id/F5"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:textAllCaps="false"
            android:text="F5" />

        <Button
            android:id="@+id/F6"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:textAllCaps="false"
            android:text="F6" />

        <Button
            android:id="@+id/F7"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:textAllCaps="false"
            android:text="F7" />

        <Button
            android:id="@+id/F8"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:textAllCaps="false"
            android:text="F8" />

        <Button
            android:id="@+id/F9"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:textAllCaps="false"
            android:text="F9" />

        <Button
            android:id="@+id/F10"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:textAllCaps="false"
            android:text="F10" />

        <Button
            android:id="@+id/F11"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:textAllCaps="false"
            android:text="F11" />

        <Button
            android:id="@+id/F12"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:textAllCaps="false"
            android:text="F12" />

        <Button
            android:id="@+id/PRINTSCREEN"
            android:layout_width="65dp"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:text="Prt Sc"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/DELETE"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:textAllCaps="false"
            android:text="Del" />

        <Button
            android:id="@+id/INSERT"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:textAllCaps="false"
            android:text="Ins" />

        <Button
            android:id="@+id/PAUSE"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:text="Pause/Break"
            android:textAllCaps="false" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/BACK_QUOTE"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:textAllCaps="false"
            android:text="~\n`" />

        <Button
            android:id="@+id/ONE"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:textAllCaps="false"
            android:text="!\n1" />

        <Button
            android:id="@+id/TWO"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:textAllCaps="false"
            android:text="\@\n2" />

        <Button
            android:id="@+id/THREE"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:textAllCaps="false"
            android:text="#\n3" />

        <Button
            android:id="@+id/FOUR"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:textAllCaps="false"
            android:text="$\n4" />

        <Button
            android:id="@+id/FIVE"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:textAllCaps="false"
            android:text="%\n5" />

        <Button
            android:id="@+id/SIX"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:textAllCaps="false"
            android:text="^\n6" />

        <Button
            android:id="@+id/SEVEN"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:textAllCaps="false"
            android:text="&amp;\n7" />

        <Button
            android:id="@+id/EIGHT"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:textAllCaps="false"
            android:text="*\n8" />

        <Button
            android:id="@+id/NINE"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:textAllCaps="false"
            android:text="(\n9" />

        <Button
            android:id="@+id/ZERO"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:textAllCaps="false"
            android:text=")\n0" />

        <Button
            android:id="@+id/MINUS"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:textAllCaps="false"
            android:text="_\n-" />

        <Button
            android:id="@+id/EQUALS"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textAllCaps="false"
            android:text="+\n=" />

        <Button
            android:id="@+id/BACK_SPACE"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0"
            android:textAllCaps="false"
            android:text="\u27f5" />

        <Button
            android:id="@+id/HOME"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textAllCaps="false"
            android:text="Home" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/TAB"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0"
            android:text="Tab  \u21b9"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/Q"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_weight="0"
            android:text="Q"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/W"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_weight="0"
            android:text="W"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/E"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_weight="0"
            android:text="E"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/R"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_weight="0"
            android:text="R"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/T"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_weight="0"
            android:text="T"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/Y"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_weight="0"
            android:text="Y"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/U"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_weight="0"
            android:text="U"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/I"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_weight="0"
            android:text="I"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/O"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_weight="0"
            android:text="O"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/P"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_weight="0"
            android:text="P"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/OPEN_BRACKET"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:textAllCaps="false"
            android:text="{\n[" />

        <Button
            android:id="@+id/CLOSE_BRACKET"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:textAllCaps="false"
            android:text="}\n]" />

        <Button
            android:id="@+id/BACK_SLASH"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:textAllCaps="false"
            android:text="|\n\\" />

        <Button
            android:id="@+id/PAGE_UP"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Pg Up"
            android:textAllCaps="false" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/CAPS_LOCK"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_weight="0"
            android:text="Caps Lock  \u21EA"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/A"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_weight="0"
            android:text="A"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/S"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_weight="0"
            android:text="S"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/D"
            android:layout_width="50dp"
            android:layout_height="match_parent"
