            android:text="X" />

        <Button
            android:id="@+id/C"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_weight="0"
            android:textAllCaps="false"
            android:text="C" />

        <Button
            android:id="@+id/V"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_weight="0"
            android:textAllCaps="false"
            android:text="V" />

        <Button
            android:id="@+id/B"
            android:layout_width="50dp"
