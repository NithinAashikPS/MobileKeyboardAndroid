            android:layout_weight="0"
            android:textAllCaps="false"
            android:text="N" />

        <Button
            android:id="@+id/M"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_weight="0"
            android:textAllCaps="false"
            android:text="M" />

        <Button
            android:id="@+id/COMMA"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_weight="0"
            android:textAllCaps="false"
            android:text="@string/GreaterThan" />

        <Button
            android:id="@+id/PERIOD"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_weight="0"
            android:textAllCaps="false"
            android:text=">\n." />

        <Button
            android:id="@+id/SLASH"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_weight="0"
            android:textAllCaps="false"
            android:text="\?\n/" />

        <Button
            android:id="@+id/SHIFT2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Shift \u21e7"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/UP"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_weight="0"
            android:textAllCaps="false"
            android:text="\u2191" />

        <Button
            android:id="@+id/END"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_weight="0"
            android:textAllCaps="false"
            android:text="End" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/CONTROL1"
            android:layout_width="75dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Ctrl"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/WINDOW1"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="\u2756"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/ALT"
            android:layout_width="75dp"
            android:layout_height="match_parent"
            android:layout_weight="0"
            android:text="Alt"
            android:textAllCaps="false" />

