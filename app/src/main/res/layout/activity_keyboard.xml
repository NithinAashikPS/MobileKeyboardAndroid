            android:id="@+id/SPACE"
            android:layout_width="600px"
            android:layout_height="match_parent"
            android:layout_weight="0"
            android:text=""
            android:textAllCaps="false" />

        <Button
            android:id="@+id/ALT_GRAPH"
            android:layout_width="75dp"
            android:layout_height="match_parent"
            android:layout_weight="0"
            android:text="Alt Gr"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/WINDOW2"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="\u2756"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/CONTEXT_MENU"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="\u2630"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/CONTROL2"
            android:layout_width="75dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Ctrl"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/LEFT"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_weight="0"
            android:text="\u2190"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/DOWN"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_weight="0"
            android:textAllCaps="false"
            android:text="\u2193" />

        <Button
            android:id="@+id/RIGHT"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_weight="0"
            android:textAllCaps="false"
            android:text="\u2192" />
    </LinearLayout>

</LinearLayout>